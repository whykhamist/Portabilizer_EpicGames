<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ControlTemplate x:Key="NoData">
        
        <Border BorderThickness="0 0 0 1"
                Margin="5 0"
                Height="75"
                VerticalAlignment="top">
            
            <Border.Style>
                <Style TargetType="{x:Type Border}">
                    
                    <Style.Setters>
                        
                        <Setter Property="BorderBrush">
                            <Setter.Value>
                                <SolidColorBrush Color="{StaticResource clr-default-dark}" Opacity="0.5"/>
                            </Setter.Value>
                        </Setter>
                        
                    </Style.Setters>
                    
                </Style>
            </Border.Style>

            <TextBlock Text=">> No Data &lt;&lt;"
                       Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type Border}}, Path=BorderBrush}"
                       HorizontalAlignment="Stretch"
                       TextAlignment="Center"
                       FontSize="18"
                       FontStyle="Italic"
                       Padding="15 24 15 24"/>

        </Border>
        
    </ControlTemplate>
    
</ResourceDictionary>